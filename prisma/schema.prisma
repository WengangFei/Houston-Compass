generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  user_name    String
  phone_number String   @unique
  email        String   @unique
  password     String
  image        String?
  created_date DateTime @default(now())

  @@map("users") // rename table to lowercase plural
  
}
